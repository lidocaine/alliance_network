<h1>Sign In</h1>
<br />

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<br /><br />
<p>New user? <%= link_to "Sign up now!", register_path %></p>
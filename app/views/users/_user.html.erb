<tr>
  <td style="width: 25px !important; text-align: center;"><%= avatar_for(user, :size => 25 )%></td>
  <td><%= link_to user.username, user %></td>
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.email %></td>
  <% if current_user.admin? %>
  <td>
    <%= link_to "Edit", edit_user_path(user.id) %> 
    <%= link_to "Delete", user_path(user.id), :method => :delete,
                                     :confirm => "Are you sure you want to delete #{user.username}?",
                                     :title => "Delete User" %>
  </td>
  <% end %>
</tr>